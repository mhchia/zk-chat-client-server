{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "ES5",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/types",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "outDir": "dist/",
    "rootDir": ".",
    "allowJs": true,
    "noImplicitAny": false,
    "types": ["react", "node"],
    "lib": ["ES2020", "DOM"]
  },
  // "ts-node": {
  //   "compilerOptions": {
  //     "target": "esnext",
  //     "module": "commonjs"
  //   }
  // },
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  },
  "include": [
    "src",
    "tests",
    "rollup.config.ts",
    "react-app-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}